<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".BottomFragment">

<LinearLayout
    android:id="@+id/layout_bottomDialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/button_default"
    android:orientation="vertical"
    android:padding="7dp"
    tools:ignore="Orientation"
    android:layout_gravity="bottom">

    <TextView
        android:id="@+id/textView_bottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/text_icon"
        android:textSize="20sp"
        android:text=""/>

    <EditText
        android:id="@+id/editText_word_bottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_shade_bottom_fragment"
        android:hint="@string/word"
        android:padding="12dp"
        android:maxLines="1"
        android:lines="1"
        android:inputType="text"
        android:textColor="@color/button_default"
        android:textColorHint="#737373"
        android:textSize="20sp"
        android:autofillHints="no" />

    <EditText
        android:id="@+id/editText_description_bottomDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_shade_bottom_fragment"
        android:hint="@string/description_for_note"
        android:padding="12dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/button_default"
        android:textColorHint="#737373"
        android:textSize="18sp"
        android:minLines="1"
        android:maxLines="20"
        android:autofillHints="no"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/enterButton_bottomDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:background="@color/text_icon"
        android:layout_gravity="end"
        android:text="@string/enter"
        android:clickable="true"
        android:textColor="@color/button_default"
        android:textColorHint="@color/white"
        android:textSize="16sp" />

</LinearLayout>
</FrameLayout>
